/* 商品分类列表页面样式 */
.category-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

/* 顶部搜索栏和用户信息 */
.header {
  background: white;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.search-bar {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 70rpx;
  background: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #999;
}

.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.username {
  color: #333;
  font-weight: 500;
}

.page-title {
  color: #333;
  font-weight: bold;
  font-size: 32rpx;
}

.website-tag {
  color: #ff6b35;
  background: rgba(255, 107, 53, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 主体内容区 */
.main-content {
  flex: 1;
  display: flex;
  overflow: hidden;
}

/* 左侧分类导航 */
.category-nav {
  width: 200rpx;
  background: white;
  border-right: 1rpx solid #eee;
}

.category-item {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.3s ease;
}

.category-item.active {
  background: #ff6b35;
  color: white;
  font-weight: bold;
  position: relative;
}

.category-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 40rpx;
  background: white;
  border-radius: 0 3rpx 3rpx 0;
}

/* 右侧商品列表 */
.product-list {
  flex: 1;
  background: #f8f8f8;
}

.product-grid {
  padding: 20rpx;
}

.product-card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  transition: transform 0.3s ease;
}

.product-card:active {
  transform: scale(0.98);
}

.product-image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.product-info {
  padding: 20rpx;
}

.product-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.price-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.price {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: bold;
}

.contribution {
  font-size: 24rpx;
  color: #999;
}

.cart-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: #ff6b35;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s ease;
}

.cart-btn:active {
  transform: scale(0.9);
}

/* 底部TabBar */
.tabbar {
  height: 100rpx;
  background: white;
  display: flex;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #999;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #ff6b35;
}

.tab-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 20rpx;
}

/* 商品规格弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal-overlay.show .modal-content {
  transform: translateY(0);
}

/* 商品基础信息 */
.product-basic-info {
  display: flex;
  margin-bottom: 40rpx;
}

.product-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.product-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.modal-price {
  font-size: 40rpx;
  color: #ff6b35;
  font-weight: bold;
}

.stock-info, .selected-spec {
  font-size: 26rpx;
  color: #999;
}

/* 规格选择区 */
.spec-section {
  margin-bottom: 40rpx;
}

.spec-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.spec-scroll {
  white-space: nowrap;
}

.spec-tags {
  display: flex;
  gap: 20rpx;
}

.spec-tag {
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.spec-tag.active {
  background: #ff6b35;
  color: white;
  border-color: #ff6b35;
}

/* 数量选择区 */
.quantity-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.quantity-label {
  font-size: 28rpx;
  color: #333;
}

.quantity-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
  transition: all 0.3s ease;
}

.quantity-btn:not(.disabled):active {
  background: #e0e0e0;
}

.quantity-btn.disabled {
  color: #ccc;
  background: #f8f8f8;
}

.quantity-text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  min-width: 60rpx;
  text-align: center;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-cart, .btn-buy {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.btn-cart {
  background: #f5f5f5;
  color: #666;
}

.btn-cart:active {
  background: #e0e0e0;
}

.btn-buy {
  background: #ff6b35;
  color: white;
}

.btn-buy:active {
  background: #e55a2b;
}