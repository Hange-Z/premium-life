/* 社区页面样式 */
.community-container {
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 顶部导航 */
.header {
  background: white;
  padding: 40rpx 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  background: #ff6b35;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: white;
}

/* 内容区域 */
.content {
  padding: 30rpx;
}

/* 欢迎卡片 */
.welcome-card {
  background: linear-gradient(135deg, #ff6b35, #ff9f43);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
  color: white;
}

.welcome-text {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.sub-text {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 功能区域 */
.feature-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.feature-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease;
}

.feature-item:active {
  transform: scale(0.95);
}

.feature-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 10rpx;
}

.feature-text {
  font-size: 26rpx;
  color: #666;
}

/* 动态列表 */
.posts-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

.post-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.post-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 30rpx;
}

.post-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.post-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: block;
}

.post-actions {
  display: flex;
  gap: 40rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: #f8f8f8;
  transition: background 0.3s ease;
}

.action-btn:active {
  background: #e0e0e0;
}

.action-icon {
  font-size: 24rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

.action-btn.liked {
  background: #ffeef0;
}

.action-btn.liked .action-text {
  color: #ff6b35;
}

/* 图片展示 */
.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin: 20rpx 0;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
}

.post-image.single {
  width: 100%;
  max-width: 500rpx;
  height: 400rpx;
}

/* 评论列表 */
.comments-section {
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx 0;
}

.comment-item {
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 15rpx;
  color: #666;
}

.comment-item:last-child {
  margin-bottom: 0;
}

.comment-username {
  color: #ff6b35;
  font-weight: bold;
}

.comment-content {
  color: #333;
}