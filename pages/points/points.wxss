/* 积分商城页面样式 */
.points-container {
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  padding-top: calc(30rpx + env(safe-area-inset-top));
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.back-btn {
  font-size: 40rpx;
  color: #333;
  padding: 10rpx;
  width: 60rpx;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

.header-placeholder {
  width: 60rpx;
}

/* 积分卡片 */
.points-card {
  background: linear-gradient(135deg, #ff6b35 0%, #ff9f43 100%);
  padding: 60rpx 40rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.points-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.points-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.view-history {
  font-size: 24rpx;
  opacity: 0.9;
}

.points-amount {
  display: flex;
  align-items: baseline;
}

.points-value {
  font-size: 80rpx;
  font-weight: bold;
  line-height: 1;
  margin-right: 10rpx;
}

.points-unit {
  font-size: 32rpx;
  opacity: 0.9;
}

/* 商品列表 */
.products-section {
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-item {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease;
}

.product-item:active {
  transform: scale(0.98);
}

.product-image {
  width: 100%;
  height: 300rpx;
}

.product-info {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-points {
  font-size: 30rpx;
  color: #ff6b35;
  font-weight: bold;
}

.product-stock {
  font-size: 22rpx;
  color: #999;
}

