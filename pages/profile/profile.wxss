/* 用户中心页面样式 */
.profile-container {
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 用户信息区域 */
.user-header {
  background: linear-gradient(135deg, #ff6b35 0%, #ff9f43 100%);
  padding: 60rpx 40rpx 80rpx;
  color: #fff;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-level {
  font-size: 24rpx;
  opacity: 0.9;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  display: inline-block;
  width: fit-content;
}

.edit-icon {
  font-size: 40rpx;
  opacity: 0.8;
}

/* 订单统计 */
.order-stats {
  background-color: #fff;
  margin: -40rpx 30rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stats-more {
  font-size: 24rpx;
  color: #999;
}

.stats-items {
  display: flex;
  justify-content: space-around;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.stats-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

.stats-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #ff6b35;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 功能菜单 */
.menu-section {
  background-color: #fff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 50rpx;
  text-align: center;
}

.menu-title {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-right {
  display: flex;
  align-items: center;
}

.menu-badge {
  background-color: #ff6b35;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  min-width: 32rpx;
  text-align: center;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}





